<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.zhendless.endlessstudy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".EndlessStudyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.OtherMainActivity"
            android:label="OtherMainActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.RecyclerViewStudyActivity"
            android:label="RecyclerViewStudyActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.RecyclerViewLikeListViewActivity"
            android:label="RecyclerViewLikeListViewActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.RecyclerViewLikeGridViewActivity"
            android:label="RecyclerViewLikeListViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="LoginActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.RecyclerViewCustomViewActivity"
            android:label="RecyclerViewLikeListViewActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.FullscreenActivity"
            android:label="FullscreenActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.LoadAdsActivity"
            android:label="LoadAdsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ScrollingActivity"
            android:label="ScrollingActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.SettingsActivity"
            android:label="SettingsActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.TabMainActivity"
            android:label="TabMainActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>